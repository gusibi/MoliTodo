{
  "name": "moli-todo",
  "version": "0.5.0",
  "description": "一款常驻在桌面边缘的悬浮式待办事项应用",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "node dev-start.js",
    "dev:renderer": "cd src/renderer && npm run dev",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "cd src/renderer && npm run build",
    "build:mac": "npm run build",
    "build:win": "npm run build",
    "postinstall": "cd src/renderer && npm install"
  },
  "keywords": [
    "todo",
    "floating",
    "productivity",
    "electron",
    "vue",
    "macos"
  ],
  "author": "MoliTodo Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "node-schedule": "^2.1.1",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.1.1"
  },
  "build": {
    "appId": "com.MoliTodo.app",
    "productName": "MoliTodo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/domain/**/*",
      "src/infrastructure/**/*",
      "src/application/**/*",
      "src/renderer/dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        },
        {
          "target": "dmg",
          "arch": "arm64"
        }
      ],
      "icon": "resources/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.png"
    }
  }
}