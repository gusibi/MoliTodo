{
  "name": "moli-todo",
  "version": "0.7.4",
  "description": "一款常驻在桌面边缘的悬浮式待办事项应用",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "npm run rebuild && node dev-start.js",
    "dev:renderer": "vite --config src/renderer/vite.config.js",
    "dev:clean": "npm run rebuild && npm run dev",
    "rebuild": "electron-rebuild",
    "build:renderer": "vite build --config src/renderer/vite.config.js",
    "build": "npm run build:renderer && electron-builder", 
    "build:mac": "npm run build",
    "build:win": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "release": "npm run version:patch"
  },
  "keywords": [
    "todo",
    "floating",
    "productivity",
    "electron",
    "vue",
    "macos"
  ],
  "author": "MoliTodo Team",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.6.2",
    "autoprefixer": "^10.4.21",
    "concurrently": "^7.6.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^4.5.14",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "node-schedule": "^2.1.1",
    "pinia": "^2.1.7",

    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "vue": "^3.3.8",
    "vue-router": "^4.2.5"
  },
  "build": {
    "appId": "com.MoliTodo.app",
    "productName": "MoliTodo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/domain/**/*",
      "src/infrastructure/**/*",
      "src/application/**/*",
      "src/renderer/dist/**/*",
      "resources/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": "x64"
        },
        {
          "target": "dmg",
          "arch": "arm64"
        }
      ],
      "icon": "resources/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.png"
    }
  }
}
